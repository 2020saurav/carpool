div.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    div.container
        div.navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                span.icon-bar
                span.icon-bar
                span.icon-bar
        div.collapse.navbar-collapse
            ul.nav.navbar-nav
                li
                    a(href="/") Carpool
                li
                    a(href="/about") About Us

            ul.nav.navbar-nav.navbar-right
                li.dropdown.active
                    -if(typeof(session.login) == "undefined") {
                        a(href="/login") Login
                    -} else {
                        a.dropdown-toggle(href = "#" data-toggle = "dropdown") #{session.firstName} #{session.lastName}
                            span.caret
                        ul.dropdown-menu(role = "menu")
                            li
                                a(href = "/user/#{session.login}") My profile
                            li.divider
                            li
                                a(href="/user/profile/update/") Update Profile
                            li.divider
                            li
                                a(href = "/logout") Logout

                    -}
