extends layout
block content
    div.col-md-offset-3.col-md-6
        form(method='post', action='/postJourney')
            div.form-group
                // TODO cities should be drop down. as in search page
                label Source
                input.form-control(type="text" name="source" placeholder="eg. kanpur")
                label Destination
                input.form-control(type="text" name="destination" placeholder="eg. Lucknow")
                label Mode
                input.form-control(type="text" name="mode" placeholder= "eg. Car")
                label Maximum Capacity
                input.form-control(type="integer" name="maxCapacity" placeholder= "eg. 06")
                label Other Information
                input.form-control(type="textarea" name="otherInfo" placeholder= "Other Information")
                label Gathering Place
                input.form-control(type="text" name="gatheringPlace" placeholder= "Gathering Place")
                label Total Fare
                input.form-control(type="integer" name="totalFare" placeholder= "eg. 1000")
                label Booking Status
                input.form-control(type="text" name="isBooked" placeholder= "eg. Yes")
                button.btn.btn-success(type="submit") Submit