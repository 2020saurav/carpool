extends layout
block content
    div.col-md-offset-3.col-md-6
        form(method='post', action='/')
            div.form-group
                label First Name
                input.form-control(type="text" name="first_name" placeholder="First Name")
                label Last Name
                input.form-control(type="text" name="last_name" placeholder="Last Name")
                label Gender
                input.form-control(type="text" name="gender" placeholder="Gender")
                label Photo URL
                input.form-control(type="text" name="photo_url" placeholder="Photo")
                label Mobile Number
                input.form-control(type="text" name="contact" placeholder="Mobile No.")
                label Email Id
                input.form-control(type="text" name="email" placeholder="Email")
                label Hall Address
                input.form-control(type="text" name="hall" placeholder="hall Address")
                label Username
                input.form-control(type="text" name="login" placeholder="Username")
                label Password
                input.form-control(type="password" name="password" placeholder="Password")
